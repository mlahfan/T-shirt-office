  <script>
    // Default colors
    const defaultColors = {
      collar: "#636363",
      "right-sleeve": "#000000",
      "left-sleeve": "#636363",
      "right-sleeve-ring": "#5e5e5e",
      "left-sleeve-ring": "#5e5e5e",
      body: "#636363"
    };

    // List of parts
    const parts = [
      "collar",
      "right-sleeve",
      "left-sleeve",
      "right-sleeve-ring",
      "left-sleeve-ring",
      "body"
    ];

    // Add event listeners for color pickers
    parts.forEach(part => {
      document.getElementById(`${part}-color`).addEventListener("input", e => {
        document.getElementById(part).setAttribute("fill", e.target.value);
      });
    });

    // Reset button
    document.getElementById("reset-btn").onclick = () => {
      parts.forEach(part => {
        document.getElementById(`${part}-color`).value = defaultColors[part];
        document.getElementById(part).setAttribute("fill", defaultColors[part]);
      });
    };
  </script>
